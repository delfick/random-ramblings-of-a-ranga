{
  "name": "random-ramblings-of-a-ranga",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:routify": "routify",
    "serve": "run-p serve:*",
    "serve:spa": "spassr",
    "serve:ssr": "spassr --ssr --port 5005",
    "build": "cross-env NODE_ENV=production run-s build:*",
    "build:routify": "routify -b",
    "dev:vite": "vite",
    "build:vite": "vite build",
    "serve:vite": "vite preview",
    "build:static": "spank",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts,.js,.svelte",
    "lint:fix": "eslint . --fix --ext .ts,.js,.svelte",
    "prelint": "npm run format"
  },
  "devDependencies": {
    "@roxi/routify": "^2.18.6",
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.30",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@tsconfig/svelte": "^2.0.1",
    "@types/tailwindcss": "^3.0.10",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "autoprefixer": "^10.4.7",
    "cross-env": "^7.0.3",
    "eslint": "^8.16.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "postcss": "^8.4.14",
    "prettier": "^2.6.2",
    "prettier-plugin-svelte": "^2.7.0",
    "sass": "^1.52.1",
    "spank": "^1.9.0",
    "spassr": "^2.6.0",
    "svelte": "^3.44.0",
    "svelte-check": "^2.2.7",
    "svelte-preprocess": "^4.10.5",
    "tailwindcss": "^3.0.24",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4",
    "vite": "^2.9.9",
    "vite-main-js": "^0.0.1",
    "vite-plugin-eslint": "^1.6.1",
    "vite-tsconfig-paths": "^3.4.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.1.1",
    "bulma": "^0.9.4",
    "npm-run-all": "^4.1.5",
    "postcss-scss": "^4.0.4",
    "svelte-markdown": "^0.2.2",
    "ts-dedent": "^2.2.0"
  },
  "appConfig": {
    "port": 5000,
    "assetsDir": "public",
    "template": "dist/index.html",
    "distDir": "dist",
    "buildDir": "dist/assets",
    "script": "dist/main.js"
  }
}
