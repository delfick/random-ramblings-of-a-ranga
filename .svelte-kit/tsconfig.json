{
	"compilerOptions": {
		"baseUrl": "..",
		"paths": {
			"@app": [
				"src/app"
			],
			"@app/*": [
				"src/app/*"
			],
			"@blog": [
				"src/routes/blog/_components"
			],
			"@blog/*": [
				"src/routes/blog/_components/*"
			],
			"@assets": [
				"src/assets"
			],
			"@assets/*": [
				"src/assets/*"
			]
		},
		"rootDirs": [
			"..",
			"./types"
		],
		"importsNotUsedAsValues": "error",
		"isolatedModules": true,
		"preserveValueImports": true,
		"lib": [
			"esnext",
			"DOM",
			"DOM.Iterable"
		],
		"moduleResolution": "node",
		"module": "esnext",
		"target": "esnext"
	},
	"include": [
		"ambient.d.ts",
		"../vite.config.ts",
		"../src/**/*.js",
		"../src/**/*.ts",
		"../src/**/*.svelte",
		"../src/**/*.js",
		"../src/**/*.ts",
		"../src/**/*.svelte",
		"../tests/**/*.js",
		"../tests/**/*.ts",
		"../tests/**/*.svelte"
	],
	"exclude": [
		"../node_modules/**",
		"./[!ambient.d.ts]**"
	]
}