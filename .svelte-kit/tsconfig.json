{
	"compilerOptions": {
		"paths": {
			"@app": [
				"../src/app"
			],
			"@app/*": [
				"../src/app/*"
			],
			"@blog": [
				"../src/app/blog"
			],
			"@blog/*": [
				"../src/app/blog/*"
			],
			"@resume": [
				"../src/app/resume"
			],
			"@resume/*": [
				"../src/app/resume/*"
			],
			"@assets": [
				"../src/assets"
			],
			"@assets/*": [
				"../src/assets/*"
			],
			"$app/types": [
				"./types/index.d.ts"
			]
		},
		"rootDirs": [
			"..",
			"./types"
		],
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"lib": [
			"esnext",
			"DOM",
			"DOM.Iterable"
		],
		"moduleResolution": "bundler",
		"module": "esnext",
		"noEmit": true,
		"target": "esnext"
	},
	"include": [
		"ambient.d.ts",
		"non-ambient.d.ts",
		"./types/**/$types.d.ts",
		"../vite.config.js",
		"../vite.config.ts",
		"../src/**/*.js",
		"../src/**/*.ts",
		"../src/**/*.svelte",
		"../tests/**/*.js",
		"../tests/**/*.ts",
		"../tests/**/*.svelte"
	],
	"exclude": [
		"../node_modules/**",
		"../src/service-worker.js",
		"../src/service-worker/**/*.js",
		"../src/service-worker.ts",
		"../src/service-worker/**/*.ts",
		"../src/service-worker.d.ts",
		"../src/service-worker/**/*.d.ts"
	]
}